{
    "name": "abenevaut/laravel-settings",
    "type": "library",
    "description": "Laravel persistent settings",
    "keywords": [
        "laravel",
        "settings",
        "persistent"
    ],
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Antoine Benevaut",
            "email": "antoine@benevaut.fr"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "illuminate/support": "~5.5.0|~5.6.0|~5.7.0|~5.8.0|^6.0",
        "doctrine/dbal": "2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "illuminate/database": "~5.5.0|~5.6.0|~5.7.0|~5.8.0|^6.0",
        "illuminate/events": "~5.5.0|~5.6.0|~5.7.0|~5.8.0|^6.0",
        "squizlabs/php_codesniffer": "^3.4",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "abenevaut\\Settings\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit",
            "vendor/bin/phpcs --standard=PSR12 ./src/App",
            "vendor/bin/phpcs --standard=PSR12 ./src/Domain",
            "vendor/bin/phpcs --standard=PSR12 ./src/helpers.php"
        ]
    }
}
